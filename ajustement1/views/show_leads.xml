<odoo>
   <template id="homepage_inherit_product_display" inherit_id="website.homepage" name="Products" active="True"
             customize_show="True">
       <data inherit_id="website.homepage">
           <xpath expr="//div[@id='wrap']" position="after">
               <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
               <div class="container mt32 mb64">
                   <section>
                       <div class="product_details">
                           <center>
                               <h3>PRODUCTS</h3>
                           </center>
                       </div>
                       <br/>
                       <div class="oe_product_cart_new row" style="overflow: hidden;">
                           <t t-foreach="website_product_ids" t-as="website_product_id">
                               <t t-if="doc.x_rappel &lt; datetime.datetime.now()">
                        <h1>
                            <t t-esc="doc.name"/>
                        </h1>
                        <br/>
                        <h3>
                            Customer :<t t-esc="doc.partner_name"/>
                        </h3>
                        <br/>
                        <h3>
                            Contact Name :<t t-esc="doc.contact_name"/>
                        </h3>
                        <br/>
                        <h3>
                            Date :<t t-esc="doc.x_rappel"/>
                        </h3>
                        <br/>
                        <h3>
                            Phone :<t t-esc="doc.phone"/>
                        </h3>
                        <br/>
                        <h3>
                            Salesperson :<t t-esc="doc.user_id.name"/>
                        </h3>
                         <br/>
                        <h3>
                            Sales Team :<t t-esc="doc.team_id.name"/>
                        </h3>
                    </t>
                           </t>
                       </div>
                   </section>
                   <br/>
                   <hr class="border-600 s_hr_1px w-100 mx-auto s_hr_dotted"/>
               </div>
           </xpath>
       </data>
   </template>
</odoo>